---
import Layout from "../layouts/Layout.astro";
import { getI18N, getPaths } from "../i18n";
const i18n = getI18N(Astro.currentLocale);
const paths = getPaths(Astro.currentLocale);
---

<Layout title="Pasteler-IA">
  <main class="my-10 text-white px-5 lg:px-20">
    <div class="py-10 text-center">
      <h1 class="text-2xl md:text-4xl lg:text-6xl">{i18n.login.title}</h1>
      <p class="text-sm lg:text-base text-yellow-400 pt-3">
        {i18n.login.subtitle}
      </p>
    </div>
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12">
      <div>
        <form
          action="/api/login/signin"
          method="post"
          class="flex flex-col gap-4"
        >
          <div class="flex flex-col gap-2">
            <span>{i18n.login.username}</span>
            <input
              class="p-2 bg-white/60 text-black"
              type="text"
              name="username"
            />
          </div>
          <div class="flex flex-col gap-2">
            <span>{i18n.login.password}</span>
            <input
              class="p-2 bg-white/60 text-black"
              type="password"
              name="password"
            />
          </div>
          <button class="bg-orange-200/40 py-2 text-xl mt-3" type="submit"
            >{i18n.login.signin}</button
          >
        </form>
      </div>
      <div>
        <form
          action="/api/login/signup"
          method="post"
          class="flex flex-col gap-4"
        >
          <div class="flex flex-col gap-2">
            <span>{i18n.login.username}</span>
            <input
              class="p-2 bg-white/60 text-black"
              type="text"
              name="username"
            />
          </div>
          <div class="flex flex-col gap-2">
            <span>{i18n.login.password}</span>
            <input
              class="p-2 bg-white/60 text-black"
              type="password"
              name="password"
            />
          </div>
          <button class="bg-orange-200/40 py-2 text-xl mt-3" type="submit"
            >{i18n.login.signup}</button
          >
        </form>
      </div>
      <div class="lg:col-span-2 flex justify-center">
        <a class="bg-slate-600 w-1/2 text-center py-2 flex items-center justify-center gap-2 text-xl rounded-lg" href="/api/login/github">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            fill="currentColor"
            class="inline size-5"
            viewBox="0 0 16 16"
          >
            <path
              d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27s1.36.09 2 .27c1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.01 8.01 0 0 0 16 8c0-4.42-3.58-8-8-8"
            ></path>
          </svg>
          Github
        </a>
      </div>
    </div>
  </main>
</Layout>
