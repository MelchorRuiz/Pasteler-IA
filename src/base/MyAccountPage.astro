---
import Layout from '../layouts/Layout.astro';
import { getI18N, getPaths } from '../i18n';
const i18n = getI18N(Astro.currentLocale);
const paths = getPaths(Astro.currentLocale);
---

<Layout title="Pasteler-IA">
  <main class="my-10 text-white px-5 lg:px-20">
    <div class="py-10 text-center">
      <h1 class="text-2xl md:text-4xl lg:text-6xl">{i18n.my_account.title}</h1>
      <p class="text-sm lg:text-base text-yellow-400 pt-3">{i18n.my_account.subtitle}</p>
    </div>
    <form class="flex" method="post" action="/api/login/logout">
      <button class="bg-red-500/80 py-2 px-10 rounded-lg mx-auto">{i18n.my_account.logout}</button>
    </form>
  </main>
</Layout>