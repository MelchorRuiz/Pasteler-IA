---
import { getI18N, getPaths } from "../i18n";
const i18n = getI18N(Astro.currentLocale);
const paths = getPaths(Astro.currentLocale);
---

<section class="text-white">
  <div class="bg-gray-500/20 p-5 lg:p-10 mx-5 md:mx-14 mt-10 rounded-3xl flex gap-12 hover:scale-[1.02] transition-all before:absolute before:content-[''] before:top-0 before:-left-[10%] before:-rotate-45 before:h-[60rem] before:transition-all before:duration-500 hover:before:-top-full hover:before:left-[140%] overflow-hidden relative">
    <div class="flex flex-col justify-between flex-1 lg:flex-none lg:w-9/12">
      <div class="">
        <h2 class="text-lg md:text-xl lg:text-2xl text-yellow-400">{i18n.your_perfect_cake.title}</h2>
        <p class="text-sm md:text-base lg:text-lg pt-3">{i18n.your_perfect_cake.description[0]}</p>
        <p class="text-sm md:text-base lg:text-lg pt-2">{i18n.your_perfect_cake.description[1]}</p>
      </div>
      <a
        href={paths.recommendations}
        class="w-full text-center bg-yellow-400/40 px-4 py-2 mt-4 rounded-lg lg:text-xl"
        >{i18n.your_perfect_cake.start}</a
      >
    </div>
    <div class="hidden md:block flex-1">
      <img class="rounded-lg h-full object-cover" src="/girl_cake.webp" alt="a girl whith a cupcake">
    </div>
  </div>
</section>
<style>
  section > div:before {
    box-shadow: 0 0 100px 40px #ffffff30;
  }
</style>