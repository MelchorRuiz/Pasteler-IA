---
interface Props {
  id?: string;
  name?: string;
  quantity?: string;
  description?: string;
  imageUrl?: string;
  href?: string;
}

const {
  id = "",
  name = "Cake",
  quantity = "100 gr",
  description = "Lorem ipsum dolor sit amet consectetur adipisicing elit. Earum ipsam corrupti commodi. Doloremque ullam cum odit architecto, officiis sint nulla unde, vitae fugiat accusantium voluptas laborum sit, dolorum qui nam.",
  imageUrl = "http://placehold.it/400x300",
  href,
}: Props = Astro.props;
---

<a
  class="cake-card relative block h-auto rounded-3xl overflow-hidden group cursor-pointer"
  href={href}
>
  <img class="h-full w-full" src={imageUrl} alt={name} transition:name={id} />
  <div
    class="absolute bottom-0 left-0 right-0 rounded-3xl bg-gray-500 translate-y-full transition ease-in-out duration-200 group-hover:translate-y-0"
  >
    <div
      class="relative px-5 pt-5 pb-3 rounded-3xl rounded-tr-none bg-gray-500 -translate-y-full transition ease-in-out duration-200 group-hover:translate-y-0"
    >
      <svg
        class="w-20 h-20 absolute bottom-full right-0 scale-75 origin-bottom-right"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path fill="#6b7280" d="M 40 80 c 22 0 40 -22 40 -40 v 40 Z"></path>
      </svg>
      <div>
        <h3 class="text-lg font-semibold text-white">{name}</h3>
        <span class="text-amber-400">{quantity}</span>
      </div>
    </div>
    <p class="px-5 pb-3 text-white/80">
      {description}
    </p>
  </div>
</a>
